@page
@model ToyShop.Pages.Account.LoginPageModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-container">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <form method="post" asp-page-handler="OnPostAsync">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Email" class="control-label label-bold">Tài khoản</label>
            <input asp-for="Email" class="form-control" placeholder="Nhập tài khoản của bạn" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label label-bold">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu của bạn" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Đăng nhập</button>
    </form>

    <div class="form-group mt-4">
        <p class="text-center">
            <span class="font-bold">Chưa có tài khoản?</span>
            <a href="/Account/RegisterPage" class="btn btn-link no-underline">Đăng ký tại đây</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Define the RGB color */
    :root {
        --custom-green: rgb(129, 196, 8); /* Custom green color */
    }

    body {
        background-image: url('https://wallpaperaccess.com/full/1804535.jpg'); /* Path to your image */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        margin: 0;
        height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

    .login-container {
        z-index: 2;
        position: relative;
        background-color: rgba(255, 255, 255, 0.9); /* Slightly transparent white */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 420px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    /* Form input styles */
    .form-control {
        padding: 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 15px;
        transition: border-color 0.3s ease;
        padding-right: 135px;
    }

        .form-control:focus {
            border-color: var(--custom-green); /* Use custom green color */
            outline: none;
            box-shadow: 0 0 5px rgba(129, 196, 8, 0.5); /* Use custom green color for shadow */
        }

    /* Label styles */
    .label-bold {
        font-weight: bold; /* Make label text bold */
    }

    /* Button styles */
    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: var(--custom-green); /* Use custom green color */
        border: none;
        color: white;
        font-size: 18px;
        font-weight: bold;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: rgb(100, 150, 10); /* Darker shade of green for hover */
        }

    /* Link styles */
    .btn-link {
        color: var(--custom-green); /* Use custom green color */
        font-weight: bold;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    /* Additional styles for the new classes */
    .font-bold {
        font-weight: bold; /* Make text bold */
    }

    .no-underline {
        text-decoration: none; /* Remove underline */
        color: var(--custom-green); /* Use custom green color */
    }

        .no-underline:hover {
            text-decoration: underline; /* Optional: add underline on hover for better UX */
        }
</style>
