@page
@model ToyShop.Pages.Account.RegisterPageModel
@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="register-container">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <form method="post" asp-page-handler="OnPostAsync">
        <div class="form-group">
            <label asp-for="UserName" class="control-label">Tài khoản</label>
            <input asp-for="UserName" class="form-control" placeholder="Nhập tài khoản của bạn" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label">Mật khẩu</label>
            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu của bạn" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="control-label">Số điện thoại</label>
            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại của bạn" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group role-select">
            <label for="RoleId">Vai trò</label>
            <select id="RoleId" name="RoleId" class="form-control">
                <option value="">Chọn vai trò</option>
                @foreach (var item in Model.Quyen)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <span style="float: right; margin-top: -15px">@Html.ValidationMessage("RoleId", "", new { @class = "text-danger" })</span>
        </div>

        <button type="submit" class="btn btn-primary">Đăng Ký</button>
    </form>

    <div class="form-group mt-3">
        <p class="text-center">
            <span class="font-bold">Đã có tài khoản?</span>
            <a href="/Account/LoginPage" class="btn btn-link no-underline">Đăng Nhập tại đây</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-image: url('https://wallpaperaccess.com/full/1804535.jpg'); /* Path to your image */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        margin: 0;
        height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

    .register-container {
        z-index: 2;
        position: relative;
        background-color: rgba(255, 255, 255, 0.9); /* Slightly transparent white */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 420px;
    }

        .register-container:hover {
            transform: scale(1.02);
        }

    label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        margin-bottom: 15px;
        padding: 12px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: rgb(129, 196, 8); /* Use your specified color */
            outline: none;
            box-shadow: 0 0 5px rgba(129, 196, 8, 0.5); /* Use your specified color */
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: rgb(129, 196, 8); /* Use your specified color */
        border: none;
        color: white;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: rgb(102, 147, 6); /* Darker shade for hover effect */
        }

    .btn-link {
        color: rgb(129, 196, 8); /* Use your specified color */
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    /* Additional styles for the new classes */
    .font-bold {
        font-weight: bold; /* Make text bold */
    }

    .no-underline {
        text-decoration: none; /* Remove underline */
        color: rgb(129, 196, 8); /* Use your specified color */
    }

        .no-underline:hover {
            text-decoration: underline; /* Optional: add underline on hover for better UX */
        }
</style>
