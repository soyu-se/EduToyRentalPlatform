@page
@model ToyShop.Pages.Account.AccountDetailModel

<h1>Chi tiết tài khoản</h1>

@if (Model.User != null)
{
    <div class="user-details">
        <h3>@Model.User.UserName</h3>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Số điện thoại:</strong> @Model.User.Phone</p>
        <p><strong>Trạng thái:</strong> @(Model.User.DeletedTime.HasValue ? "Đã xóa" : "Hoạt động")</p>
    </div>

    @*  <a href="./Edit?id=@Model.User.Id" class="btn btn-primary">Chỉnh sửa</a> *@
}
else
{
    <p>Không tìm thấy thông tin người dùng.</p>
}

<a href="/Admin/Index" class="btn btn-secondary">Quay lại</a>
