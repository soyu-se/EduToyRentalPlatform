@model ToyShop.Pages.FeedBack.CreateModel
@{
    ViewData["Title"] = "Create Feedback";
    Layout = "~/Pages/Admin/Shared/_Layout.cshtml";
}
<form method="post" class="row shadow rounded p-3">
    <input type="hidden" asp-for="Feedback.UserId" value="0174A52F-2A20-45EC-9989-DCCCD8107BD2" />
