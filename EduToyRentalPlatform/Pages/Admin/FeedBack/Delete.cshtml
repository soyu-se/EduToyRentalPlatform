@page "{id?}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ToyShop.Pages.Admin.FeedBack.DeleteModel
@{
    ViewData["Title"] = "Delete FeedBack";
    Layout = "~/Pages/Admin/Shared/_Layout.cshtml";
}

<div class="p-3 row shadow rounded">
    <div>
        <div>
            <h4>Are you sure you want to delete this feedback?</h4>
        </div>
        <div class="mb-3">
            <strong>Content:</strong> @Model.Feedback.Content
        </div>
    </div>
    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-success" asp-page="./Index">Back to List</a>
    </form>
</div>
