@page
@model EduToyRentalPlatform.Pages.Admin.ContractManage.IndexModel

@{
    ViewData["Title"] = "Contract Management";
    Layout = "~/Pages/Admin/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Contract.css">

<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <form method="get" asp-page-handler="Search" class="d-flex">
                                <input type="text" name="searchName" placeholder="Search by name" class="form-control" />
                                <button type="submit" class="btn btn-primary custom-search-btn">Search</button>
                            </form>
                        </div>

                        <div>
                            <a href="/Admin/ContractManage/Create" class="btn btn-success">
                                <i class="fas fa-plus"></i> Add New Contract
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered" id="example1">
                            <thead>
                                <tr>
                                    <th>Restore Toy ID</th>
                                    <th>Staff Confirmed</th>
                                    <th>Total Value</th>
                                    <th>Number of Rentals</th>
                                    <th>Date Created</th>
                                    <th>Contract Type</th>
                                    <th>Date Start</th>
                                    <th>Date End</th>
                                    <th>Status</th>
                                    <th>Application User</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ContractEntities != null && Model.ContractEntities.Any())
                                {
                                    foreach (var item in Model.ContractEntities)
                                    {
                                        <tr>
                                            <td>@item.RestoreToyId</td>
                                            <td>@item.StaffConfirmed</td>
                                            <td>@item.TotalValue</td>
                                            <td>@item.NumberOfRentals</td>
                                            @* <td>@item.ContractType</td> *@
                                            <td>@item.Status</td>
                                            <td>@item.ApplicationUser?.FullName ?? "N/A"</td>
                                            <td>
                                                <a href="/Admin/ContractManage/Edit/@item.Id" class="btn btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/Admin/ContractManage/Delete/@item.Id" class="btn btn-danger" onClick="return confirm('Are you sure you want to delete this item?');"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="11" class="text-center">No contracts found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="pagination">
                            @if (Model.PageNumber > 1)
                            {
                                <a href="/Admin/ContractManage?pageNumber=@(Model.PageNumber - 1)" class="btn btn-secondary prev-btn">Previous</a>
                            }
                            else
                            {
                                <button class="btn btn-secondary prev-btn" disabled>Previous</button>
                            }

                            <span class="page-number">@Model.PageNumber</span>

                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <a href="/Admin/ContractManage?pageNumber=@(Model.PageNumber + 1)" class="btn btn-secondary next-btn">Next</a>
                            }
                            else
                            {
                                <button class="btn btn-secondary next-btn" disabled>Next</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
